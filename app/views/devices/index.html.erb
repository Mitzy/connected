<h3>List of all devices</h3>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Device Name</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.id %></td>
        <td><%= device.name %></td>
        <td><%= device.location %></td>
        <td><%= link_to 'Show', device, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_device_path(device), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', device, class: "btn btn-default btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Device', new_device_path, class: "btn btn-default btn-sm" %>

<div style="margin: 30px;">
  <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?&" + @query + "&size=640x300&sensor=false", alt: "Map of location", class: "img-responsive" %>
</div>
